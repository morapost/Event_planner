<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time,start_year: 2018, prompt: {hour: 00},ampm: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_time %>
    <%= f.datetime_select :end_time, prompt: {hour: 00},start_year: 2018, ampm: true, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= f.label "Select Users: " %>
    <%= f.collection_check_boxes :user_ids, User.all, :id, :name, :item_wrapper_class => 'checkbox_container' %>
        
  </div>
 

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
